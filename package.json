{
	"name": "brisbanesocialchess",
	"version": "1.0.0",
	"private": false,
	"type": "module",
	"scripts": {
		"format": "prettier --write \"**/*.{css,js,json,md,yaml,yml}\"",
		"check": "prettier --check \"**/*.{css,js,json,md,yaml,yml}\"",
		"lint": "eslint --config .github/linters/eslint.config.mjs .",
		"lint:fix": "eslint --config .github/linters/eslint.config.mjs . --fix",
		"test": "npx lerna run test --stream",
		"dev": "npm run watch",
		"start": "npm run build && npm run vite:preview",
		"watch": "concurrently \"npm run 11ty:watch\" \"npm run tailwindcss:watch\" \"node copy-html.js\" \"npm run vite:watch\"",
		"build": "npm run 11ty:build && npm run tailwindcss:build && npm run vite:build",
		"11ty:watch": "eleventy --serve --input=frontend",
		"11ty:build": "eleventy --input=frontend",
		"tailwindcss:build": "tailwindcss -i frontend/assets/tailwind.css -o frontend/assets/styles/base.css",
		"tailwindcss:watch": "tailwindcss -i frontend/assets/tailwind.css -o frontend/assets/styles/base.css --watch",
		"vite:dev": "vite",
		"vite:build": "node copy-html.js && vite build && node merge-assets.js",
		"vite:watch": "vite watch",
		"vite:preview": "vite preview"
	},
	"prettier": {
		"printWidth": 140,
		"singleQuote": true,
		"semi": true,
		"useTabs": true,
		"endOfLine": "lf"
	},
	"workspaces": [
		"packages/*"
	],
	"dependencies": {
		"@tailwindcss/cli": "^4.1.11",
		"glob": "^11.0.3",
		"html-minifier-terser": "^7.2.0",
		"luxon": "^3.7.1",
		"tailwindcss": "^4.1.11"
	},
	"devDependencies": {
		"@11ty/eleventy": "^3.1.2",
		"@cloudflare/vitest-pool-workers": "^0.8.68",
		"@eslint/js": "^9.35.0",
		"@npmcli/arborist": "^9.1.3",
		"concurrently": "^9.2.1",
		"eslint": "^9.35.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-prettier": "^5.5.1",
		"globals": "^16.4.0",
		"lerna": "^8.2.3",
		"postcss": "^8.5.6",
		"postcss-import": "^16.1.1",
		"prettier": "^3.6.2",
		"sharp": "^0.34.3",
		"slugify": "^1.6.6",
		"svgo": "^4.0.0",
		"vite-plugin-image-optimizer": "^2.0.2"
	},
	"overrides": {
		"devalue": "5.3.2"
	}
}
